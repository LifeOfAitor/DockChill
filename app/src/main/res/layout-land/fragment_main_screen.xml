<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainScreenFragment"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:id="@+id/time_date_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/time_text"
            android:textColor="@color/md_theme_onBackground_mediumContrast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="0.02"
            android:textSize="100sp"
            android:textStyle="bold"
            tools:text="12:45" />

        <TextView
            android:id="@+id/date_text"
            android:textColor="@color/md_theme_onBackground_mediumContrast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:textSize="24sp"
            tools:text="16/10/2025" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/weather_card_container"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/music_card_container"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="UselessParent">

        <include
            android:id="@+id/weather_card"
            layout="@layout/weather_card" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/music_card_container"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weather_card_container"
        tools:ignore="UselessParent">

        <include
            android:id="@+id/music_card"
            layout="@layout/music_player_card" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>